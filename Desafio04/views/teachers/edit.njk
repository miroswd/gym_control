{% extends "layout.njk" %}

{% block content %}
  <div class="card">
    {# direita do card #}
    <section 
      class="avatar"
      style="background:url({{teacher.avatar_url}}) no-repeat center center / cover">
    </section>

    <section class="details"> {# esquerda do card #}
      <form method="POST" action="/teachers/{{teacher.id}}?_method=PUT">
        {% include 'teachers/fields.njk' %}
        <input type="hidden" name="id" value="{{teacher.id}}">
      </form>

      <form class="form-delete" method="POST" action="/teachers/{{teacher.id}}?_method=DELETE">
        <input type="hidden" name="id" value="{{teacher.id}}">
        <button type="submit">Delete</button>
      </form>  
    </section>
  </div>
{% endblock content %}
