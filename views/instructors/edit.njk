{% extends "layout.njk" %}

{% block content %}

<div class="card">
  
  {# Direita do card #}
  <section 
      class="avatar" 
      style="
        background: url(https://source.unsplash.com/collection/8969654/900x900)  no-repeat center center / cover">
  </section> {# api unsplash, que randomiza as fotos,   /id servido da collection / tamanho  #}

  <section class="details"> {# Esquerda do card#}
    <form  method="POST" action="/instructors?_method=PUT">
    {# Action -> para onde vai #}
      <h3>Edit Instructor</h3>

      {% include 'instructors/fields.njk' %} {# inclui um pedaço de código q está alocado em outro lugar #}

      <input type="hidden" name="id" value="{{instructor.id}}"> {#  #}
    </form>

    <form id="form-delete" method="POST" action="/instructors?_method=DELETE">
      <input type="hidden" name="id" value="{{instructor.id}}">
      <button type="submit">Deletar</button>
    </form>
  </section>

</div>

{% endblock content %}