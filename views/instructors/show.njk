{% extends "layout.njk" %}

{% block content %}
  <div class="card">
    <section 
      class="avatar" 
      style="
        background: url({{instructor.avatar_url}})  no-repeat center center / cover"></section>
                                              {# api unsplash, que randomiza as fotos,   /id servido da collection / tamanho  #}
    <section class="details">
      <h3>Details</h3>

      <div class="item">
        <div>Instructor</div>
        <div>{{instructor.name}}</div>
      </div>

      <div class="item">
        <div>Age</div>
        <div>{{instructor.birth}}</div>
      </div>

      <div class="item">
        <div>Genre</div>
        <div>{{"Male" if instructor.genre == "M" else "Female"}}</div>
              {# Mostra masculino se genre == 'M' #}
      </div>

      <div class="item">
        <div>Monitoring</div>
        <div>
          {% for service in instructor.services %}  
          <span>{{service}}</span>
          {% endfor %}
        </div>
      </div>

      <div class="item">
        <div>Since</div>
        <div>{{instructor.created_at}}</div>
      </div>
      
      <a href="/instructors/{{ instructor.id  }}/edit" class="button">Editar</a>
      
    </section>
  </div>
{% endblock content %}