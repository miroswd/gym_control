{# Campos do formul√°rio do instrutor #}
<div class="item">
        <div>Avatar URL</div>
        <div>
          <input 
            type="url"
            name="avatar_url"
            placeholder="http://"
            value="{{instructor.avatar_url}}"
          >
        </div>
      </div>

      <div class="item">
        <div>Instructor</div>
        <div>
          <input 
            type="text"
            name="name"
            placeholder="Instructor Name"
            value="{{instructor.name}}"
          >
        </div>
      </div>

      <div class="item">
        <div>Date of Birth</div>
        <div>
          <input 
            type="date"
            name="birth"
            value="{{instructor.birth}}"
          >
        </div>
      </div>

      <div class="item">
        <div>Genre</div>
        <div>
          <span>
            <input 
              type="radio" 
              name="genre"
              value="M" 
              {% if instructor.genre == 'M' %}
                checked
              {% endif %}>Male</span>
          
          <span>
            <input 
              type="radio"
              name="genre" 
              value="F"
              {% if instructor.genre == "F" %}
                checked
              {% endif %}
          >Female</span>
        </div>
      </div>

      <div class="item">
        <div>Occupation Area</div>
        <div>
          <input 
            type="text"
            name="services"
            placeholder="Enter the services provided, separating with commas"
            value="{{instructor.services}}"
          >
        </div>
      </div>

      <button type="submit">Save</button>